{
    "compileOnSave": true,
    "include": [
        "./source/typescript/**/*.ts"
    ],
    "compilerOptions": {
        "types": [
            "@types/node"
        ],
        "allowJs": true,
        "baseUrl": "./",
        "alwaysStrict": true,
        "target": "ES2015",
        "lib": [
            "ESNEXT",
            "ES2020",
            "DOM"
        ],
        "removeComments": true,
        "rootDir": "./source/typescript/",
        "module": "ESNext",
        "outDir": "./build/library",
        "declarationDir": "./build/types",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true
    }
}